@if (Page == "New Chat")
{
    @if (List == "all")
    {
        <div class="friend-card new-chat">
            <div class="left">
                <div class="profile-img"></div>
                <div class="friend-info">
                    <h4>@Friend</h4>
                    <p>Short Status Message</p>
                </div>
            </div>
            <div class="right">
                <button class="icon-btn select-btn @(IsSelected ? "selected" : "")" @onclick=ToggleFriend>
                    @if(IsSelected)
                    {
                        <CheckIcon1 />
                    } else
                    {
                        <span></span>
                    }
                </button>
                @* <button class="icon-btn deselect-btn" @onclick=ToggleFriend><CloseIcon /></button> *@
            </div>
        </div>
    } else if (List == "selected")
    {
        <div class="friend-card new-chat selected">
            <div class="friend-avatar">
                <div class="profile-img"></div>
                <button class="icon-btn deselect-btn" @onclick=ToggleFriend>
                    <XCircledIcon />
                </button>
            </div>
            <h4>@(Friend.Length > 5 ? $"{Friend.Substring(0, 5)}..." : Friend)</h4>
         </div>
    }
} else
{
    <div class="friend-card">
        <div class="left">
            <div class="profile-img"></div>
            <div class="friend-info">
                <h4>@Friend</h4>
                <p>Short Status Message</p>
            </div>
        </div>
        <div class="right">
            <button class="icon-btn deselect-btn" @onclick=ToggleFriend><CloseIcon /></button>
        </div>
    </div>
}

@code {
    [Parameter] public string Friend { get; set; }
    [Parameter] public string Page { get; set; }
    [Parameter] public bool IsSelected { get; set; }
    [Parameter] public string List { get; set; }
    [Parameter] public EventCallback<string> OnSelect { get; set; }
    [Parameter] public EventCallback<string> OnDeselect { get; set; }

    void ToggleFriend()
    {
        IsSelected = !IsSelected;
        if (IsSelected)
        {
            OnSelect.InvokeAsync(Friend);
        } else
        {
            OnDeselect.InvokeAsync(Friend);
        }
    }
}